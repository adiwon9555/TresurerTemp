<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contact_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/no_profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray_border"/>
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_profile_image"
        android:layout_toEndOf="@+id/contact_profile_image"
        tools:text="Rush Voda"
        android:singleLine="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textSize="22sp"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_profile_image"
        android:layout_toEndOf="@+id/contact_profile_image"
        android:layout_below="@+id/contact_name"
        android:layout_toLeftOf="@+id/egf"
        tools:text="+91 9876543210"
        android:singleLine="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textSize="15sp"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/egf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_border"
        android:layout_below="@+id/contact_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="12dp"
        tools:text="HSR" />


</RelativeLayout>